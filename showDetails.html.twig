<html>
<head>
    <title>Author Details</title>
   <style>
    /* Style global */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #1a1a1a;
        color: #f5f5f5;
        margin: 0;
        padding: 0;
        line-height: 1.6;
        animation: fadeIn 1.5s ease-in-out;
    }

    /* En-tÃªtes */
    h1, h2, h3 {
        color: #9b59b6;
        text-align: center;
        margin-bottom: 20px;
        animation: fadeInDown 1.2s ease-out;
    }

    h1 {
        font-size: 2.5em;
        font-weight: bold;
        position: relative;
        animation: bounceIn 2s ease infinite alternate;
    }

    h2 {
        font-size: 2em;
    }

    h3 {
        font-size: 1.75em;
    }

    /* Links with hover animation */
    a {
        color: #9b59b6;
        text-decoration: none;
        position: relative;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #8e44ad;
        animation: pulse 0.6s infinite alternate;
    }

    /* Button with hover animation */
    button, .btn {
        background-color: #9b59b6;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s;
        position: relative;
        animation: shake 2s infinite alternate;
    }

    button:hover, .btn:hover {
        background-color: #8e44ad;
        transform: translateY(-2px);
    }

    /* Container for the main content */
    .container {
        width: 80%;
        margin: auto;
        overflow: hidden;
    }

    /* Inputs with a slight glow on focus */
    input[type="text"],
    input[type="email"],
    input[type="password"],
    textarea {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #666;
        border-radius: 5px;
        background-color: #222;
        color: white;
    }

    input[type="text"]:focus,
    input[type="email"]:focus,
    input[type="password"]:focus,
    textarea:focus {
        border-color: #9b59b6;
        box-shadow: 0 0 8px #9b59b6;
    }

    /* Submit button with a grow effect */
    input[type="submit"] {
        background-color: #2ecc71;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        transition: transform 0.3s;
    }

    input[type="submit"]:hover {
        transform: scale(1.05);
    }

    /* Table styles */
    table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
        animation: fadeInUp 1.5s ease;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #9b59b6;
        color: white;
    }

    tr:nth-child(even) {
        background-color: black;
    }

    /* Icon animations */
    .icon {
        font-size: 1.5em;
        margin-right: 10px;
        color: #9b59b6;
        animation: spin 4s infinite linear;
    }

    /* Footer */
    footer {
        background-color: #1a1a1a;
        color: white;
        text-align: center;
        padding: 10px 0;
        position: fixed;
        width: 100%;
        bottom: 0;
    }

    /* Hide images when disableImages is true */
    .hide-image {
        display: none;
    }

    /* Keyframes for animations */
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes bounceIn {
        0% { transform: translateY(0); }
        100% { transform: translateY(-10px); }
    }

    @keyframes pulse {
        0% { transform: scale(1); }
        100% { transform: scale(1.05); }
    }

    @keyframes shake {
        0% { transform: rotate(0); }
        100% { transform: rotate(3deg); }
    }

    @keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    @media (max-width: 768px) {
        .container {
            width: 100%;
            padding: 0 10px;
        }

        h1 {
            font-size: 2em;
        }

        h2 {
            font-size: 1.75em;
        }

        h3 {
            font-size: 1.5em;
        }
    }
</style>

</head>
<body>
    <h1>Author Details</h1>

    <table>
        <tr><th>Detail</th><th>Information</th></tr>
        <tr>
            <td>Author Name</td>
            <td>{{ author.name|upper }}</td>
        </tr>
        <tr>
            <td>Number of Books</td>
            <td>{{ author.nbrBooks }}</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>{{ author.email }}</td>
        </tr>
        <tr>
            <td>Picture</td>
            <td>
                <img src="{{ asset(author.picture) }}" alt="{{ author.name }}">
            </td>
        </tr>
    </table>
</body>
</html>
